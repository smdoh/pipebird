{
  "compilerOptions": {
    "target": "es2016",
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "sourceMap": true
  },
  "exclude": ["tests", "node_modules", "prisma"]
}
